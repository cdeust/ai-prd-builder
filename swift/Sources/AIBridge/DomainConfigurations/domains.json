{
  "domains": {
    "payment": {
      "name": "Payment & Transactions",
      "priority": 1,
      "indicators": [
        "payment", "card", "credit", "debit", "transaction", "checkout",
        "billing", "invoice", "refund", "charge", "stripe", "paypal",
        "visa", "mastercard", "amex", "cvv", "pci", "merchant",
        "gateway", "processor", "authorization", "capture", "void",
        "chargeback", "dispute", "settlement", "acquiring", "issuer"
      ],
      "guidance": {
        "sections": [
          {
            "title": "CRITICAL COMPLIANCE & SECURITY REQUIREMENTS",
            "items": [
              "PCI DSS Compliance Level (SAQ A, SAQ A-EP, SAQ D)",
              "Tokenization strategy (what data to tokenize vs store)",
              "3D Secure 2.0 / Strong Customer Authentication (SCA)",
              "Data encryption standards (AES-256, TLS 1.2+)",
              "GDPR compliance for payment data",
              "Payment Card Industry Data Security Standard v4.0"
            ]
          },
          {
            "title": "CARD VALIDATION SPECIFICS",
            "items": [
              "Luhn algorithm for card number validation",
              "BIN/IIN validation and card type detection",
              "Card number formats (Visa: 16, MC: 16, Amex: 15)",
              "CVV/CVC formats (3 digits for Visa/MC, 4 for Amex)",
              "Expiry date validation (MM/YY or MM/YYYY)",
              "Card holder name validation rules"
            ]
          },
          {
            "title": "REGIONAL & CURRENCY REQUIREMENTS",
            "items": [
              "Supported currencies and conversion handling",
              "Regional min/max transaction limits",
              "Tax/VAT calculation requirements",
              "Currency decimal precision (2 for USD/EUR, 0 for JPY)",
              "Local payment methods (SEPA, ACH, etc.)",
              "Cross-border transaction fees"
            ]
          },
          {
            "title": "PAYMENT GATEWAY INTEGRATION",
            "items": [
              "Gateway provider (Stripe, Adyen, Braintree, etc.)",
              "Webhook endpoint requirements and security",
              "Idempotency key implementation",
              "Retry logic and timeout handling",
              "API rate limiting considerations",
              "Batch processing capabilities"
            ]
          },
          {
            "title": "FRAUD PREVENTION",
            "items": [
              "Velocity checks (transactions per time period)",
              "IP geolocation verification",
              "Device fingerprinting",
              "Address Verification Service (AVS)",
              "Risk scoring thresholds",
              "Machine learning fraud detection",
              "Blacklist/whitelist management"
            ]
          }
        ]
      },
      "questions": [
        "What payment gateway/processor will you use (Stripe, Adyen, etc.)?",
        "What is your PCI compliance level requirement?",
        "Which card types must be supported (Visa, MC, Amex, Discover)?",
        "What currencies and regions need to be supported?",
        "Do you need 3D Secure/SCA implementation for EU compliance?",
        "What are the min/max transaction limits per region?",
        "How should failed payments be handled (retry logic, notifications)?",
        "What fraud prevention measures are required?",
        "Do you need recurring payments or subscription support?",
        "What is the expected transaction volume per day/month?",
        "How will chargebacks and disputes be handled?",
        "What reporting and reconciliation requirements exist?"
      ],
      "requirements_checklist": [
        "PCI DSS compliance documentation",
        "Tokenization implementation",
        "3D Secure authentication flow",
        "Fraud detection system",
        "Chargeback handling process",
        "Refund workflow",
        "Webhook security (HMAC validation)",
        "Idempotency keys for all transactions",
        "Transaction reconciliation process",
        "Audit logging for all payment events",
        "Error recovery mechanisms",
        "Payment state machine definition"
      ],
      "metrics": [
        {
          "name": "Transaction Success Rate",
          "unit": "percentage",
          "target": ">98%",
          "critical": true
        },
        {
          "name": "Average Processing Time",
          "unit": "milliseconds",
          "target": "<2000ms",
          "critical": true
        },
        {
          "name": "Fraud Detection Rate",
          "unit": "percentage",
          "target": ">95%",
          "critical": true
        },
        {
          "name": "False Positive Rate",
          "unit": "percentage",
          "target": "<2%",
          "critical": false
        },
        {
          "name": "Chargeback Rate",
          "unit": "percentage",
          "target": "<0.5%",
          "critical": true
        },
        {
          "name": "Gateway Uptime",
          "unit": "percentage",
          "target": ">99.95%",
          "critical": true
        }
      ]
    },
